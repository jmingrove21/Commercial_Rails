<style>
 
  .button_text{
    align-self: center;
    text-align: center;
  }
</style>

<tr>
  <td class="table-row-name"><img src="<%=order.buy_items.first.images.first.image%>" style="width:50px;" /> </td>
  <td class="table-row-name" >  <%=order.buy_items.first.title%>
    <% if order.buy_items.size >1%>
        외 <%= (order.buy_items.size-1).to_s %> 개
    <%end%>
